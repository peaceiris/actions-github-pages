{
  "name": "github-pages-deploy-action",
  "version": "3.1.0-1",
  "description": "GitHub Actions for GitHub Pages",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "test": "jest --coverage --verbose --detectOpenHandles",
    "build": "ncc build ./src/index.ts -o lib",
    "tsc": "tsc",
    "format": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "release": "standard-version",
    "update-deps": "(git diff 'HEAD@{1}' --name-only | grep 'package-lock.json' > /dev/null) && npm ci || :"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm run update-deps; git remote prune origin"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --check",
      "eslint",
      "jest --bail --findRelatedTests --detectOpenHandles"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peaceiris/actions-gh-pages.git"
  },
  "keywords": [
    "GitHub Actions",
    "Actions",
    "JavaScript Action",
    "TypeScript Action",
    "GitHub Pages",
    "gh-pages"
  ],
  "author": "peaceiris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceiris/actions-gh-pages/issues"
  },
  "homepage": "https://github.com/peaceiris/actions-gh-pages#readme",
  "dependencies": {
    "@actions/core": "^1.2.1",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^2.1.0",
    "@actions/glob": "^0.1.0",
    "@actions/io": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "@zeit/ncc": "^0.21.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.6.0",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "lint-staged": "^10.0.0",
    "prettier": "1.19.1",
    "standard-version": "^7.0.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  }
}
